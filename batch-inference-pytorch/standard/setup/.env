# Environment variables for GCP and GKE setup
# Make sure you are authenticated with 'gcloud auth login' and 'gcloud auth application-default login'
# Also, ensure the correct project is set with 'gcloud config set project YOUR_PROJECT_ID'

export REGION="us-central1"
export ZONE="us-central1-b"
export PROJECT="YOUR_PROJECT"

export GVNIC_NETWORK_PREFIX="tutorial-gvnic"
export RDMA_NETWORK_PREFIX="tutorial-rdma"
export CLUSTER_NAME="tutorial-dws"

export KSA_NAME="tutorial-ksa"
export GSBUCKET="tutorial_main_bucket_aug1"
export GSDATABUCKET="tutorial_data_bucket_aug1"
export NAMESPACE='default'
export OUTPUT_PATH='/data' # will write to the GCSFuse mountpoint at  gs://$GSBUCKET 

# This command requires gcloud to be installed and authenticated
export PROJECT_NUMBER=$(gcloud projects describe ${PROJECT} --format="value(projectNumber)")

# Your Hugging Face token for accessing models/datasets
export HF_TOKEN="YOUR_TOKEN"

# Specify GKE and Kueue versions
export GKE_VERSION="1.33.2-gke.1111000"
# if there are issues with this GKE version, try running:
# gcloud container get-server-config --format="yaml(validMasterVersions)" --zone=${ZONE} --project=${PROJECT}
# to see valid cluster versions 
export KUEUE_VERSION="v0.12.4"